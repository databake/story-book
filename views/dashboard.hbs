<h6>Dashboard</h6>
<h5 class="grey-text" >Welcome {{ name }}</h5>

{{#if projects}}
<ul class="collection with-header">
  <li class="collection-header"><h5>Here are your projects</h5></li>
  {{#each projects}}
  <a href="/projects/{{ _id }}" class="collection-item avatar">
    <img src="{{ user.image }}" class="circle" alt="" />
    <span class="title">
      {{ name }}
    </span>
    <p class="grey-text text-darken-2">
      {{ stripTags (truncate abstract 200)  }} <br />
      <span class="grey-text">{{formatDate createdAt 'MMMM Do YYYY'}}</span>
    </p>
   <i class="material-icons secondary-content">chevron_right</i></a
    
  </a>
  {{/each}}
</ul>
{{else}}
<p>You have not created any projects</p>
{{/if}}
