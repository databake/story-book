<h3>Edit Project</h3>
<div class="row">
  <form action="/projects/{{ project._id }}" method="POST" class="col s12">
    <input type="hidden" name="_method" value="PUT" />
    <div class="row">
      <div class="input-field">
        <input type="text" id="name" name="name" value="{{ project.name }}" />
        <label for="name">Name</label>
      </div>
    </div>

    <div class="row">
      <div class="input-field">
        <select id="status" name="status">
          {{#select project.status}}
          <option value="public" selected>Public</option>
          <option value="private">Private</option>
          {{/select}}
        </select>
        <label for="status">Status</label>
      </div>
    </div>

    <div class="row">
      <div class="input-field">
        <h5>Tell Us About Your Project:</h5>
        <textarea id="abstract" name="abstract">{{
          project.abstract
        }}</textarea>
      </div>
    </div>

    <div class="row">
      <input type="submit" value="Save" class="btn" />
      <a href="/dashboard" class="btn orange">Cancel</a>
    </div>
  </form>
</div>
