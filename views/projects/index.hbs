<h1 class='text-secondary'>Projects</h1>
<div class="row">
  {{#each projects}}
  <div class="col s12 m4 l3" style="grid-template-columns: repeat(auto-fit, minmax(200px, 1fr))">
    <div class="card">
      <div class="card-content">
        <span class="card-title truncate">{{ name }}</span>
        <div class="grey-text text-darken-1 tooltipped" data-position="bottom" data-tool-tip={{abstract}}>{{ truncate abstract 100}}</div>
        
       
        <!--div class="chip">
          <img src="{{ user.image }}" alt="" />
          <a href="/projects/user/{{ user._id }}">{{ user.displayName }}</a>
        </div-->
      </div>
        <div class="card-action">
          <a href="/projects/{{ _id }}/stories">Stories ({{stories}})</a>
        </div>
      </div>
    </div>
    {{else}}
    <p>No projects to display</p>
    {{/each}}
  </div>
</div>
