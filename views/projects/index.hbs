<h1 class='teal-text text-darken-3'>Projects</h1>
<div class="row">
  {{#each projects}}
  <div class="col s12 m4 l3">
    <div class="card">
      <div class="card-content center-align">
        <h5 class="grey-text text-darken-2">{{ name }}</h5>
        <p class='grey-text'>{{stripTags (truncate abstract 60)}}</p>
        <br />
       
        <!--div class="chip">
          <img src="{{ user.image }}" alt="" />
          <a href="/projects/user/{{ user._id }}">{{ user.displayName }}</a>
        </div-->
      </div>
        <div class="card-action center-align">
          <a href="/projects/{{ _id }}/stories" class="btn teal">Stories ({{stories}})</a>
        </div>
      </div>
    </div>
    {{else}}
    <p>No projects to display</p>
    {{/each}}
  </div>
</div>
