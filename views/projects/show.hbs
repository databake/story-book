<div class="row">
  <div class="col s12 m8">
    <h3>
      {{ project.name }}
      <small>{{{editIcon project.user project project._id false}}}</small>
    </h3>
    <div class="card project">
      <div class="card-content">
        <span
          class="card-title"
          >{{formatDate date 'MMMM Do YYYY, h:mm:ss a'}}</span
        >
        {{{project.abstract}}}
      </div>
    </div>
  </div>
  <div class="col s12 m4">
    <div class="card center-align">
      <div class="card-content">
        <span class="card-title">{{ project.user.displayName }}</span>
        <img
          src="{{ project.user.image }}"
          class="circle responsive-img img-small"
        />
      </div>
      <div class="card-action">
        <a href="/projects/user/{{ project.user._id }}"
          >More From {{ project.user.firstName }}</a
        >
      </div>
    </div>
  </div>
</div>
